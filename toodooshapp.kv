#:import Factory kivy.factory.Factory
<Popup@Popup>:
    auto_dismiss: False
    Button:
        size_hint_y: .1
        text: 'Close me!'
        on_release: root.dismiss()

BoxLayout:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    Header:
        manager: screen_manager
        size_hint_y: .1
    ScreenManager:
        id: screen_manager
    Footer:
        manager: screen_manager
        size_hint_y: .1

<Header>:
    ActionBar:
        size_hint_y: 1
        ActionView:
            ActionPrevious:
            ActionButton:
                text: 'Home'
                on_press: root.manager.current = 'home_screen'
            ActionSeparator:
            ActionButton:
                text: 'Settings'
                on_press: root.manager.current = 'settings_screen'

<Footer>:
    Button:
        text: '+'
        on_press: Factory.Popup().open()

<Popup>:
    auto_dismiss: False
    title: 'popoppop'

<List>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        List:

<ScreenManager>:
    id: screen_manager
    HomeScreen:
        name: 'home_screen'
        manager: 'screen_manager'
    SettingsScreen:
        name: 'settings_screen'
        manager: 'screen_manager'
