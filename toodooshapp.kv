#:import Factory kivy.factory.Factory
<Popup>:
    auto_dismiss: True
    title: ''
    size_hint: None, None
    size: 400, 200
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            multiline: False
        Button:
            size_hint_y: .5
            text: 'Add Task'
            on_release: root.dismiss()

BoxLayout:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    Header:
        manager: screen_manager
        size_hint_y: .1
    ScreenManager:
        id: screen_manager
    Footer:
        manager: screen_manager
        size_hint_y: .1

<Header>:
    ActionBar:
        size_hint_y: 1
        ActionView:
            ActionPrevious:
            ActionButton:
                text: 'Home'
                on_press: root.manager.current = 'home_screen'
            ActionSeparator:
            ActionButton:
                text: 'Settings'
                on_press: root.manager.current = 'settings_screen'

<Footer>:
    Button:
        text: '+'
        size: 100, 50
        size_hint_y: None
        on_press: Factory.Popup().open()

<List>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        List:

<ScreenManager>:
    id: screen_manager
    HomeScreen:
        name: 'home_screen'
        manager: 'screen_manager'
    SettingsScreen:
        name: 'settings_screen'
        manager: 'screen_manager'
